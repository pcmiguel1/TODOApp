<script>

const pickr1 = new Pickr({
  el: '#color-picker-1',
  default: "007bff",
  theme: 'monolith',
  components: {
    preview: true,
    opacity: true,
    hue: true,

    interaction: {
      hex: true,
      rgba: true,
      hsla: true,
      hsva: true,
      cmyk: true,
      input: true,
      clear: true,
      save: true
    }
  }
});

pickr1.on('save', instance => {
	let color = instance.toHEXA().toString();
	document.getElementById('color').value = color;
	
});
</script>




